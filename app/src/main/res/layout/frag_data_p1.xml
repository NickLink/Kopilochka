<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <!--<include-->
            <!--android:id="@+id/top_menu_open"-->
            <!--layout="@layout/top_menu_open" />-->

        <LinearLayout
            android:id="@+id/login_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/log_01_work_with"
                style="@style/myHeader_Red_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/log_01_work_with" />

            <TextView
                android:id="@+id/log_01_to_manager"
                style="@style/mySub_Black_18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/log_01_to_manager" />

            <ImageView
                android:id="@+id/girl_with_pig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:src="@drawable/girl_login" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/log_01_login_text"
                    style="@style/myBold_21Base"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/log_01_login_text" />

                <LinearLayout
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="0px"
                    android:layout_height="0px"/>

                <EditText
                    android:id="@+id/data_email_edit"
                    style="@style/myBold_21Base"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:ems="10"
                    android:inputType="textEmailAddress" />
            </LinearLayout>

            <View
                android:id="@+id/red_line_1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="6dp"
                android:background="@color/my_red_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/log_01_password_text"
                    style="@style/myBold_21Base"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/log_01_password_text" />

                <EditText
                    android:id="@+id/data_password_edit"
                    style="@style/myBold_21Base"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:ems="10"
                    android:inputType="textPassword" />
            </LinearLayout>

            <View
                android:id="@+id/red_line_2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="6dp"
                android:background="@color/my_red_color" />

            <Button
                android:id="@+id/data_login_button"
                style="@style/myWhite_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:background="@drawable/blue_button_selector"
                android:text="@string/data_login_button_text"
                android:textAllCaps="false"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>