<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/fininfo_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/myRegular_21" />

    <TextView
        android:id="@+id/fininfo_contact_e_mail_title"
        style="@style/myTableH_13Base"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/data_email_text"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/fininfo_contact_e_mail"
        style="@style/mySub_Black_18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/fininfo_contact_phone_title"
        style="@style/myTableH_13Base"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/data_phone_text"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/fininfo_contact_phone"
        style="@style/mySub_Black_18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/fininfo_bonus"
        style="@style/myRegular_21red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp" />

</LinearLayout>