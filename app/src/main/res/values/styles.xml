<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Start text Styles-->
    <style name="myBase_24">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="myWhite_24" parent="myBase_24">
        <item name="android:textColor">@color/my_white_color</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="myHeader_Red_24" parent="myBase_24">
        <item name="android:textColor">@color/my_red_color</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="myBold_21Base">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/my_grey_color</item>
    </style>

    <style name="myRegular_21" parent="myBold_21Base">
        <item name="android:textColor">@color/my_sub_color</item>
    </style>

    <style name="myRegular_21red" parent="myBold_21Base">
        <item name="android:textColor">@color/my_red_color</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="mySub_Black_18Base">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/my_sub_color</item>
    </style>

    <style name="mySub_Black_18" parent="mySub_Black_18Base">
        <item name="android:textColor">@color/my_sub_color</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="mySub_Black_18grey" parent="mySub_Black_18Base">
        <item name="android:textColor">@color/my_light_grey_color</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="mySub_Black_18red" parent="mySub_Black_18Base">
        <item name="android:textColor">@color/my_red_color</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="myBold_18menu" parent="mySub_Black_18Base">
        <item name="android:textColor">@color/my_white_color</item>
    </style>

    <style name="myTableH_16Base">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/my_light_grey_color</item>
    </style>

    <style name="myTableH_16Blue" parent="myTableH_16Base">
        <item name="android:textColor">@color/my_sub_color</item>
    </style>

    <style name="myTableH_15">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/my_sub_color</item>
    </style>

    <style name="myTableH_13Base">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/my_light_grey_color</item>
    </style>

    <style name="myTableH_13noty" parent="myTableH_13Base">
        <item name="android:textColor">@color/my_sub_color</item>
    </style>


    <style name="myWTF_EditStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">@null</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="Error_Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="myLinearLayout">
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="myDialogLayout">
        <item name="android:paddingLeft">13dp</item>
        <item name="android:paddingRight">13dp</item>
        <item name="android:paddingTop">30dp</item>
        <item name="android:paddingBottom">30dp</item>
        <item name="android:layout_marginLeft">35dp</item>
        <item name="android:layout_marginRight">35dp</item>
    </style>

</resources>
