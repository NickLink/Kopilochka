<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="@color/holo_green_light"/>

    <LinearLayout
        style="@style/myLinearLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_weight="8">

        <TextView
            android:id="@+id/action_list_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/action_list_name"
            android:layout_weight="5" />

        <TextView
            android:id="@+id/action_list_item_days"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/action_list_days"
            android:layout_weight="2"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/action_list_item_points"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/action_list_points"
            android:layout_weight="1"
            android:textAlignment="center" />
    </LinearLayout>

</LinearLayout>